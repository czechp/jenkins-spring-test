pipeline{
    agent any
    parameters{
        booleanParam(defaultValue: false, description: "Build test branch", name: "myBoolean")
    }
    stages{
        stage("Clear"){
            steps{
                deleteDir()
            }
        }
        stage("Clone repo"){
            steps{
                sh "git clone https://github.com/czechp/jenkins-spring-test.git"
            }
        }
        stage("Test branch"){
            when{expression{params.myBoolean == true}}
            steps{
                dir("jenkins-spring-test"){
                    sh "git checkout TestBranch"
                }
            }
        }
        stage("Build"){
            steps{
                dir("jenkins-spring-test"){
                    sh "mvn clean install"
                }
            }
        }
        stage("Test"){
            steps{
                dir("jenkins-spring-test"){
                    sh "mvn test"
                }
                echo "Script finished"
            }
        }
    }
}